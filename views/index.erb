<div class="dashboard-grid" style="margin-bottom: 20px;">
  <div class="card">
    <h3>⛓️ Chain Length</h3>
    <p><%= @chain.length %> blocks</p>
  </div>
  <div class="card">
    <h3>🧩 Active Nodes</h3>
    <p>Node A, Node B, Node X</p>
  </div>
  <div class="card">
    <h3>🏆 Main Chain</h3>
    <% begin %>
      <% node_a = NodeChain.new("A") %>
      <% node_b = NodeChain.new("B") %>
      <% main = NodeChain.compare_chains(node_a.chain, node_b.chain) %>
      <% if main == :a %>
        <p>🟢 Node A</p>
      <% elsif main == :b %>
        <p>🟢 Node B</p>
      <% else %>
        <p>⚠️ Undecided</p>
      <% end %>
    <% rescue %>
      <p>⚠️ Error</p>
    <% end %>
  </div>
</div>

